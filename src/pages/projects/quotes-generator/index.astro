<script is:inline>
(function() {
  // Curated Unsplash photo IDs — large pool for variety
  const unsplashIds = [
    'photo-1499892477393-f675706cbe6e', 'photo-1470252649378-9c29740c9fa8',
    'photo-1518756131217-31eb79b20e8f', 'photo-1506905925346-21bda4d32df4',
    'photo-1493246507139-91e8fad9978e', 'photo-1507400492013-162706c8c05e',
    'photo-1476820865390-c52aeebb9891', 'photo-1464822759023-fed622ff2c3b',
    'photo-1501785888041-af3ef285b470', 'photo-1472214103451-9374bd1c798e',
    'photo-1433086966358-54859d0ed716', 'photo-1469474968028-56623f02e42e',
    'photo-1447752875215-b2761acb3c5d', 'photo-1490682143684-14369e18dce8',
    'photo-1505765050516-f72dcac9c60e', 'photo-1431512284068-4c4002298068',
    'photo-1504567961542-e24d9439a724', 'photo-1465056836900-8f1e940b3b76',
    'photo-1419242902214-272b3f66ee7a', 'photo-1500534314209-a25ddb2bd429',
    'photo-1509316975850-ff9c5deb0cd9', 'photo-1446034295857-c899f4c4fbbe',
    'photo-1536431311719-398b6704d4cc', 'photo-1549880338-65ddcdfd017b',
  ];

  function unsplashUrl(id, w) {
    return `https://images.unsplash.com/${id}?w=${w}&fit=crop&q=80`;
  }

  // Shuffle array in place
  function shuffle(arr) {
    for (let i = arr.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [arr[i], arr[j]] = [arr[j], arr[i]];
    }
    return arr;
  }

  // Pick 8 random IDs from the pool for initial display
  const shuffled = shuffle([...unsplashIds]);
  const backgrounds = shuffled.slice(0, 8).map(id => ({
    url: unsplashUrl(id, 800),
    thumb: unsplashUrl(id, 120),
    id,
  }));

  const fontMap = {
    serif: "'Playfair Display', Georgia, serif",
    sans: "'Sora', 'IBM Plex Sans', sans-serif",
    mono: "'JetBrains Mono', monospace",
  };

  let state = {
    bgIndex: 0,
    overlay: 'dark',
    font: 'serif',
    align: 'center',
  };

  // DOM refs
  const bgEl = document.getElementById('qg-bg');
  const overlayEl = document.getElementById('qg-overlay');
  const quoteEl = document.getElementById('qg-quote');
  const authorEl = document.getElementById('qg-author');
  const preview = document.getElementById('qg-preview');
  const canvas = document.getElementById('qg-canvas');
  const ctx = canvas.getContext('2d');

  // Background thumbnails
  const bgGrid = document.getElementById('qg-bg-grid');

  function renderThumbs() {
    bgGrid.innerHTML = '';
    backgrounds.forEach((bg, i) => {
      const thumb = document.createElement('button');
      thumb.className = 'qg-bg-thumb' + (i === state.bgIndex ? ' qg-bg-thumb--active' : '');
      thumb.style.backgroundImage = `url(${bg.thumb})`;
      thumb.addEventListener('click', () => selectBg(i));
      bgGrid.appendChild(thumb);
    });
  }

  renderThumbs();

  function selectBg(i) {
    state.bgIndex = i;
    bgEl.style.backgroundImage = `url(${backgrounds[i].url})`;
    bgGrid.querySelectorAll('.qg-bg-thumb').forEach((t, j) =>
      t.classList.toggle('qg-bg-thumb--active', j === i)
    );
  }

  // Load more backgrounds
  document.getElementById('qg-load-more').addEventListener('click', () => {
    const remaining = unsplashIds.filter(id => !backgrounds.some(b => b.id === id));
    if (remaining.length === 0) {
      // All exhausted — generate picsum randoms
      for (let i = 0; i < 8; i++) {
        const seed = Date.now() + i;
        backgrounds.push({
          url: `https://picsum.photos/seed/${seed}/800/800`,
          thumb: `https://picsum.photos/seed/${seed}/120/120`,
          id: 'picsum-' + seed,
        });
      }
    } else {
      const next = shuffle(remaining).slice(0, 8);
      next.forEach(id => {
        backgrounds.push({ url: unsplashUrl(id, 800), thumb: unsplashUrl(id, 120), id });
      });
    }
    renderThumbs();
    // Select the first new one
    selectBg(backgrounds.length - 8);
  });

  function setOverlay(type) {
    state.overlay = type;
    const map = {
      dark: 'rgba(0,0,0,0.55)',
      light: 'rgba(255,255,255,0.45)',
      gradient: 'linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.1) 60%, transparent 100%)',
      none: 'transparent',
    };
    overlayEl.style.background = map[type] || map.dark;

    // Adjust text color
    const isLight = type === 'light';
    preview.style.setProperty('--qg-text', isLight ? '#111' : '#fff');
    preview.style.setProperty('--qg-text-sub', isLight ? 'rgba(0,0,0,0.6)' : 'rgba(255,255,255,0.7)');
    preview.style.setProperty('--qg-divider', isLight ? 'rgba(0,0,0,0.2)' : 'rgba(255,255,255,0.3)');
  }

  function setFont(font) {
    state.font = font;
    quoteEl.style.fontFamily = fontMap[font];
    authorEl.style.fontFamily = font === 'serif' ? fontMap.sans : fontMap[font];
  }

  function setAlign(align) {
    state.align = align;
    const content = preview.querySelector('.qg-preview__content');
    content.style.textAlign = align;
    content.style.alignItems = align === 'center' ? 'center' : align === 'right' ? 'flex-end' : 'flex-start';
  }

  // Pill button wiring
  function wirePills(containerId, callback) {
    const container = document.getElementById(containerId);
    container.querySelectorAll('.qg-pill').forEach(btn => {
      btn.addEventListener('click', () => {
        container.querySelectorAll('.qg-pill').forEach(b => b.classList.remove('qg-pill--active'));
        btn.classList.add('qg-pill--active');
        const val = btn.dataset.overlay || btn.dataset.font || btn.dataset.align;
        callback(val);
      });
    });
  }

  wirePills('qg-overlay-options', setOverlay);
  wirePills('qg-font-options', setFont);
  wirePills('qg-align-options', setAlign);

  // Shuffle — pick a random different background
  document.getElementById('qg-shuffle').addEventListener('click', () => {
    let next;
    do {
      next = Math.floor(Math.random() * backgrounds.length);
    } while (next === state.bgIndex && backgrounds.length > 1);
    selectBg(next);
  });

  // Download via canvas
  document.getElementById('qg-download').addEventListener('click', async () => {
    const btn = document.getElementById('qg-download');
    btn.textContent = 'Generating...';
    btn.disabled = true;

    try {
      const bg = backgrounds[state.bgIndex];
      const img = new Image();
      img.crossOrigin = 'anonymous';

      await new Promise((resolve, reject) => {
        img.onload = resolve;
        img.onerror = reject;
        img.src = bg.id.startsWith('picsum-')
          ? bg.url.replace('/800/800', '/1200/1200')
          : unsplashUrl(bg.id, 1200);
      });

      // Draw background (cover)
      const scale = Math.max(1080 / img.width, 1080 / img.height);
      const w = img.width * scale;
      const h = img.height * scale;
      ctx.drawImage(img, (1080 - w) / 2, (1080 - h) / 2, w, h);

      // Overlay
      if (state.overlay === 'dark') {
        ctx.fillStyle = 'rgba(0,0,0,0.55)';
        ctx.fillRect(0, 0, 1080, 1080);
      } else if (state.overlay === 'light') {
        ctx.fillStyle = 'rgba(255,255,255,0.45)';
        ctx.fillRect(0, 0, 1080, 1080);
      } else if (state.overlay === 'gradient') {
        const grad = ctx.createLinearGradient(0, 1080, 0, 0);
        grad.addColorStop(0, 'rgba(0,0,0,0.8)');
        grad.addColorStop(0.6, 'rgba(0,0,0,0.1)');
        grad.addColorStop(1, 'transparent');
        ctx.fillStyle = grad;
        ctx.fillRect(0, 0, 1080, 1080);
      }

      // Text settings
      const isLight = state.overlay === 'light';
      const textColor = isLight ? '#111' : '#fff';
      const subColor = isLight ? 'rgba(0,0,0,0.6)' : 'rgba(255,255,255,0.7)';
      const divColor = isLight ? 'rgba(0,0,0,0.2)' : 'rgba(255,255,255,0.3)';

      const fontFamilyQuote = state.font === 'serif' ? 'Playfair Display, Georgia, serif'
        : state.font === 'mono' ? 'JetBrains Mono, monospace'
        : 'Sora, sans-serif';
      const fontFamilyAuthor = state.font === 'serif' ? 'Sora, sans-serif' : fontFamilyQuote;

      ctx.textAlign = state.align;
      const xPos = state.align === 'center' ? 540 : state.align === 'right' ? 980 : 100;
      const maxW = 880;

      // Quote text
      ctx.fillStyle = textColor;
      ctx.font = `700 48px ${fontFamilyQuote}`;
      const quoteText = quoteEl.innerText || 'Your quote here';
      const lines = wrapText(ctx, quoteText, maxW);
      const lineHeight = 68;
      const totalTextH = lines.length * lineHeight + 100;
      let startY = (1080 - totalTextH) / 2;

      lines.forEach((line, i) => {
        ctx.fillText(line, xPos, startY + i * lineHeight);
      });

      // Divider
      const divY = startY + lines.length * lineHeight + 30;
      ctx.strokeStyle = divColor;
      ctx.lineWidth = 1.5;
      ctx.beginPath();
      if (state.align === 'center') {
        ctx.moveTo(490, divY);
        ctx.lineTo(590, divY);
      } else if (state.align === 'left') {
        ctx.moveTo(100, divY);
        ctx.lineTo(200, divY);
      } else {
        ctx.moveTo(880, divY);
        ctx.lineTo(980, divY);
      }
      ctx.stroke();

      // Author
      ctx.fillStyle = subColor;
      ctx.font = `400 28px ${fontFamilyAuthor}`;
      const authorText = authorEl.innerText || '';
      if (authorText) {
        ctx.fillText(authorText, xPos, divY + 50);
      }

      // Download
      const link = document.createElement('a');
      link.download = 'quote-' + Date.now() + '.png';
      link.href = canvas.toDataURL('image/png');
      link.click();
    } catch (e) {
      console.error('Download failed:', e);
      alert('Could not generate image. Try a different background.');
    }

    btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg> Download PNG';
    btn.disabled = false;
  });

  function wrapText(ctx, text, maxWidth) {
    const words = text.split(' ');
    const lines = [];
    let currentLine = '';
    for (const word of words) {
      const test = currentLine ? currentLine + ' ' + word : word;
      if (ctx.measureText(test).width > maxWidth && currentLine) {
        lines.push(currentLine);
        currentLine = word;
      } else {
        currentLine = test;
      }
    }
    if (currentLine) lines.push(currentLine);
    return lines;
  }

  // Initialize
  selectBg(0);
  setOverlay('dark');
  setFont('serif');
})();
</script>

<style>
  /* ── Grain ── */
  .qg-grain {
    position: fixed;
    inset: 0;
    z-index: 9999;
    pointer-events: none;
    opacity: 0.035;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 180px;
  }

  /* ── Shell ── */
  .qg {
    max-width: 960px;
    margin: 0 auto;
    padding: 0 24px 80px;
  }

  /* ── Hero ── */
  .qg-hero {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 56px 0 48px;
    gap: 32px;
  }

  .qg-hero__title {
    font-family: 'Sora', 'IBM Plex Sans', sans-serif;
    font-weight: 700;
    font-size: clamp(40px, 8vw, 72px);
    line-height: 1;
    margin: 0 0 16px;
    letter-spacing: -0.03em;
  }

  .qg-hero__accent {
    display: inline-block;
    background: linear-gradient(135deg, hsl(349 98% 25%) 0%, hsl(169deg 60% 22%) 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: qgShimmer 6s ease infinite;
  }

  @keyframes qgShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .qg-hero__sub {
    font-size: var(--body);
    color: var(--element2);
    margin: 0;
    max-width: 340px;
  }

  /* Geometric accent */
  .qg-hero__geo {
    position: relative;
    width: 120px;
    height: 120px;
    flex-shrink: 0;
  }

  .qg-geo__ring {
    position: absolute;
    inset: 0;
    border: 1.5px solid var(--element4);
    border-radius: 50%;
    animation: qgRingSpin 20s linear infinite;
  }

  @keyframes qgRingSpin { to { transform: rotate(360deg); } }

  .qg-geo__dot {
    position: absolute;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--primary-color);
  }

  .qg-geo__dot--1 { top: 8px; left: 56px; }
  .qg-geo__dot--2 { bottom: 16px; right: 12px; background: var(--secondary-color); }

  .qg-geo__quotes {
    position: absolute;
    width: 48px;
    height: 48px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--element3);
  }

  /* ── Workspace ── */
  .qg-workspace {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 32px;
    align-items: start;
    border-top: 1px solid var(--element4);
    padding-top: 48px;
  }

  /* ── Preview card ── */
  .qg-canvas-wrap {
    position: relative;
  }

  .qg-preview {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    border-radius: 12px;
    overflow: hidden;
    background: #1a1a1a;
    --qg-text: #fff;
    --qg-text-sub: rgba(255,255,255,0.7);
    --qg-divider: rgba(255,255,255,0.3);
    box-shadow: 0 24px 48px -12px rgba(0,0,0,0.3);
    transition: box-shadow 0.3s ease;
  }

  .qg-preview:hover {
    box-shadow: 0 32px 64px -16px rgba(0,0,0,0.4);
  }

  .qg-preview__bg {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    transition: background-image 0.5s ease;
  }

  .qg-preview__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.55);
    transition: background 0.4s ease;
  }

  .qg-preview__content {
    position: absolute;
