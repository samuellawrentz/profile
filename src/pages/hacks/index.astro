---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import SEO from '../../components/SEO.astro';

const hacks = await getCollection('hacks');
const categories = [...new Set(hacks.map(h => {
  const parts = h.data.path.split('/');
  return parts[2];
}))];

const categoryIcons: Record<string, string> = {
  react: 'code',
  neovim: 'terminal',
  microfrontend: 'dashboard',
  philosophy: 'psychology',
  'software-philosophy': 'architecture',
};

const categoryDescriptions: Record<string, string> = {
  react: 'Hooks, patterns, state management, and performance tips for React.',
  neovim: 'Configuration, plugins, LSP setup, and workflow optimization.',
  microfrontend: 'Architecture, integration, deployment, and scaling strategies.',
  philosophy: 'Principles, ethics, and philosophical perspectives on craft.',
  'software-philosophy': 'Agile thinking, open source, and development methodologies.',
};

const categoryData = categories.map(cat => ({
  name: cat,
  count: hacks.filter(h => h.data.path.includes(`/hacks/${cat}/`)).length,
  displayName: cat.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' '),
  icon: categoryIcons[cat] || 'lightbulb',
  description: categoryDescriptions[cat] || 'Quick tips and short-form content.',
})).sort((a, b) => b.count - a.count);

const totalHacks = hacks.length;
---
<BaseLayout title="Hacks - Samuel Lawrentz">
  <SEO slot="head" title="Hacks - Samuel Lawrentz" description="Quick tips, tricks, and short-form content on React, Neovim, microfrontends, and software philosophy." />

  <div class="hacks-hub">
    <div class="hacks-hub__grain"></div>

    {/* ── Header ── */}
    <header class="hacks-header">
      <div class="hacks-header__title-row">
        <h1 class="hacks-header__title">Hacks</h1>
        <span class="hacks-header__count">{totalHacks} entries</span>
      </div>
      <p class="hacks-header__subtitle">
        Quick tips, tricks, and short-form notes — organized by topic.
      </p>
    </header>

    {/* ── Category Grid ── */}
    <div class="category-grid">
      {categoryData.map((cat, idx) => (
        <a href={`/hacks/${cat.name}/`} class="category-card" style={`--i: ${idx}`}>
          <article class="category-card__inner">
            <div class="category-card__icon-wrap">
              <span class="material-icons-round category-card__icon">{cat.icon}</span>
            </div>
            <div class="category-card__body">
              <div class="category-card__header">
                <h2 class="category-card__title">{cat.displayName}</h2>
                <span class="category-card__badge">{cat.count}</span>
              </div>
              <p class="category-card__desc">{cat.description}</p>
            </div>
            <span class="category-card__arrow">&rarr;</span>
          </article>
        </a>
      ))}
    </div>

    {/* ── Recent Hacks ── */}
    <section class="recent-section">
      <div class="recent-section__header">
        <h2 class="recent-section__title">All hacks</h2>
      </div>
      <div class="recent-list">
        {hacks.map((hack, idx) => {
          const category = hack.data.path.split('/')[2];
          const categoryDisplay = category.split('-').map((w: string) => w.charAt(0).toUpperCase() + w.slice(1)).join(' ');
          return (
            <a href={hack.data.path} class="recent-item" style={`--i: ${idx}`}>
              <div class="recent-item__left">
                <span class="recent-item__category">{categoryDisplay}</span>
                <h3 class="recent-item__title">{hack.data.title}</h3>
                {hack.data.tags.length > 0 && (
                  <div class="recent-item__tags">
                    {hack.data.tags.slice(0, 3).map((tag: string) => (
                      <span class="tag-pill">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
              <span class="recent-item__arrow">&rarr;</span>
            </a>
          );
        })}
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .hacks-hub {
    position: relative;
    max-width: 960px;
    margin: 0 auto;
    padding: 2rem 1.5rem 5rem;
  }

  .hacks-hub__grain {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 9999;
    opacity: 0.035;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 180px;
  }

  /* ── Header ── */
  .hacks-header {
    margin-bottom: 3rem;
    animation: fadeSlideUp 0.5s ease both;
  }

  .hacks-header__title-row {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hacks-header__title {
    font-family: 'Sora', sans-serif;
    font-size: var(--h1);
    font-weight: 800;
    color: var(--element1);
    letter-spacing: -0.03em;
    line-height: 1.1;
    margin: 0;
  }

  .hacks-header__count {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--element3);
    background: var(--surface2);
    padding: 0.25em 0.7em;
    border-radius: 100px;
    white-space: nowrap;
  }

  .hacks-header__subtitle {
    font-size: 1.05rem;
    color: var(--element3);
    margin: 0.75rem 0 0;
    max-width: 480px;
    line-height: 1.6;
  }

  /* ── Category Grid ── */
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
    margin-bottom: 4rem;
  }

  .category-card {
    display: block;
    text-decoration: none;
    color: inherit;
    animation: fadeSlideUp 0.5s ease both;
    animation-delay: calc(var(--i) * 0.06s + 0.1s);
  }

  .category-card__inner {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--surface2);
    border-radius: 10px;
    border: 1px solid transparent;
    height: 100%;
    transition: border-color 0.25s, transform 0.25s, box-shadow 0.25s;
  }

  .category-card:hover .category-card__inner {
    border-color: var(--element4);
    transform: translateY(-2px);
    box-shadow: 0 8px 32px -8px var(--card-shadow-color);
  }

  .category-card__icon-wrap {
    flex-shrink: 0;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: var(--surface1);
    border: 1px solid var(--element4);
  }

  .category-card__icon {
    font-size: 22px;
    color: var(--element2);
  }

  .category-card__body {
    flex: 1;
    min-width: 0;
  }

  .category-card__header {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 0.35rem;
  }

  .category-card__title {
    font-family: 'Sora', sans-serif;
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--element1);
    margin: 0;
    letter-spacing: -0.01em;
  }

  .category-card__badge {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    letter-spacing: 0.05em;
    color: var(--element3);
    background: var(--surface1);
    padding: 0.15em 0.5em;
    border-radius: 100px;
    white-space: nowrap;
  }

  .category-card__desc {
    font-size: 0.8rem;
    color: var(--element3);
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .category-card__arrow {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    color: var(--element4);
    flex-shrink: 0;
    margin-top: 0.1rem;
    transition: color 0.25s, transform 0.25s;
  }

  .category-card:hover .category-card__arrow {
    color: var(--primary-color);
    transform: translateX(4px);
  }

  /* ── Recent Section ── */
  .recent-section {
    border-top: 1px solid var(--element4);
    padding-top: 2.5rem;
  }

  .recent-section__header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: 1.5rem;
  }

  .recent-section__title {
    font-family: 'Sora', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--element1);
    margin: 0;
    letter-spacing: -0.02em;
  }

  /* ── Recent List ── */
  .recent-list {
    display: flex;
    flex-direction: column;
  }

  .recent-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 0.5rem;
    text-decoration: none;
    color: inherit;
    border-bottom: 1px solid var(--element4);
    transition: background 0.2s, padding-left 0.2s;
  }

  .recent-item:first-child {
    border-top: 1px solid var(--element4);
  }

  .recent-item:hover {
    background: var(--surface2);
    padding-left: 1rem;
    border-radius: 6px;
  }

  .recent-item__left {
    min-width: 0;
  }

  .recent-item__category {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--primary-color);
    margin-bottom: 0.2rem;
    display: block;
  }

  .recent-item__title {
    font-family: 'Sora', sans-serif;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--element1);
    margin: 0 0 0.35rem;
    letter-spacing: -0.01em;
    line-height: 1.35;
  }

  .recent-item__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
  }

  .tag-pill {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.6rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    padding: 0.15em 0.5em;
    border-radius: 4px;
    background: var(--surface2);
    color: var(--element3);
    white-space: nowrap;
    border: 1px solid var(--element4);
  }

  .recent-item:hover .tag-pill {
    background: var(--surface1);
  }

  .recent-item__arrow {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.95rem;
    color: var(--element4);
    flex-shrink: 0;
    transition: color 0.25s, transform 0.25s;
  }

  .recent-item:hover .recent-item__arrow {
    color: var(--primary-color);
    transform: translateX(4px);
  }

  /* ── Animation ── */
  @keyframes fadeSlideUp {
    from { opacity: 0; transform: translateY(16px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* ── Responsive ── */
  @media (max-width: 680px) {
    .hacks-hub {
      padding: 1.5rem 1rem 3rem;
    }

    .category-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
