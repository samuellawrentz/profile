---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import bookImg from '../assets/home/book.webp';
import friendsLogoImg from '../assets/home/friends_logo.png';

const allBlogPosts = await getCollection('blog', ({ data }) => data.published === true);
const latestPosts = allBlogPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 4);

const hackCategories = ['react', 'neovim', 'philosophy', 'microfrontend', 'software-philosophy'];

const projects = [
  {
    title: 'JIRA Commit Helper',
    description: 'A VSCode extension that supercharges your Git workflow by integrating JIRA ticket IDs into commit messages automatically.',
    tech: ['VSCode Extension', 'TypeScript', 'JIRA API'],
    link: 'https://marketplace.visualstudio.com/items?itemName=samuellawrentz.jira-commit-helper',
  },
  {
    title: 'Quotes Generator',
    description: 'A browser-based image quote generator that creates beautiful quote images with Unsplash backgrounds. No login required.',
    tech: ['React', 'Canvas API', 'Unsplash'],
    link: '/projects/quotes-generator/',
  },
  {
    title: 'React Highlight Textbox',
    description: 'A React component that highlights specific words or patterns inside a text input in real-time.',
    tech: ['React', 'CSS', 'npm'],
    link: 'https://www.npmjs.com/package/react-highlight-textbox',
  },
  {
    title: 'rc-json-editor',
    description: 'A lightweight, dependency-free JSON editor component for React with syntax highlighting and validation.',
    tech: ['React', 'TypeScript', 'npm'],
    link: 'https://www.npmjs.com/package/rc-json-editor',
  },
  {
    title: 'commit-helper',
    description: 'A CLI tool to streamline git commit message generation with JIRA integration and conventional commits support.',
    tech: ['Node.js', 'CLI', 'Git'],
    link: 'https://github.com/samuellawrentz/commit-helper',
  },
  {
    title: 'PastTenser',
    description: 'A fun API that returns the past tense of any English verb. Built with NodeJS and hosted as a public endpoint.',
    tech: ['Node.js', 'Express', 'REST API'],
    link: '/projects/pasttenser/',
  },
];

const featured = latestPosts[0];
const restPosts = latestPosts.slice(1);
---

<BaseLayout title="Samuel Lawrentz - The Frontend Dev">
  <div class="page-grain"></div>
  <div class="editorial">

    <!-- Hero -->
    <section class="hero">
      <div class="hero__layout">
        <div class="hero__text">
          <h1 class="hero__heading">
            <span class="hero__hi">Hi, I'm</span>
            <span class="hero__name">SAM</span>
          </h1>
          <p class="hero__tagline" id="tagline"></p>
          <p class="hero__bio">
            <b>Frontend Engineer</b> obsessed with clean architecture and elegant solutions.
            Exploring the intersection of AI and web to push creative boundaries.
          </p>
          <p class="hero__philosophy">
            <em>"Simplicity is the ultimate sophistication in code."</em>
          </p>
        </div>
        <div class="hero__visual">
          <!-- Hidden original heart for DOM compat -->
          <div class="image heart-image" style="display:none;">
            <div class="heart"></div>
            <div class="hcard"></div>
          </div>
          <!-- CSS Art Composition -->
          <div class="geo-art" aria-hidden="true">
            <div class="geo-art__ring geo-art__ring--outer"></div>
            <div class="geo-art__ring geo-art__ring--inner"></div>
            <div class="geo-art__diamond"></div>
            <div class="geo-art__dot geo-art__dot--1"></div>
            <div class="geo-art__dot geo-art__dot--2"></div>
            <div class="geo-art__dot geo-art__dot--3"></div>
            <div class="geo-art__line geo-art__line--h"></div>
            <div class="geo-art__line geo-art__line--v"></div>
            <div class="geo-art__bracket geo-art__bracket--open">{'{'}</div>
            <div class="geo-art__bracket geo-art__bracket--close">{'}'}</div>
            <div class="geo-art__pixel-heart"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog -->
    <section class="ed-section">
      <div class="ed-section__header">
        <h2 class="ed-section__title">Blog</h2>
        <a href="/blog/" class="section__link">All posts &rarr;</a>
      </div>

      <div class="blog-editorial">
        {featured && (
          <a href={featured.data.path} class="blog-featured">
            {featured.data.heroImage && (
              <div class="blog-featured__img">
                <Image src={featured.data.heroImage} alt={featured.data.title} width={720} height={400} />
              </div>
            )}
            <div class="blog-featured__body">
              <time class="blog-date">{new Date(featured.data.date).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' })}</time>
              <h3 class="blog-featured__title">{featured.data.title}</h3>
              {featured.data.description && <p class="blog-featured__desc">{featured.data.description}</p>}
              <div class="blog-tags">
                {featured.data.tags.map((tag: string) => (
                  <span class="blog-tag">{tag}</span>
                ))}
              </div>
            </div>
          </a>
        )}

        <div class="blog-rest">
          {restPosts.map((post) => (
            <a href={post.data.path} class="blog-card">
              {post.data.heroImage && (
                <div class="blog-card__img">
                  <Image src={post.data.heroImage} alt={post.data.title} width={360} height={200} />
                </div>
              )}
              <div class="blog-card__body">
                <time class="blog-date">{new Date(post.data.date).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' })}</time>
                <h4 class="blog-card__title">{post.data.title}</h4>
                <div class="blog-tags">
                  {post.data.tags.map((tag: string) => (
                    <span class="blog-tag">{tag}</span>
                  ))}
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>

      <div class="blog-cta">
        <div class="blog-cta__img">
          <Image src={bookImg} alt="Blog book" height={280} />
        </div>
        <div class="blog-cta__body">
          <h3>I write about Javascript, CSS, and all things web.</h3>
          <p>New content <b>every month</b> covering ReactJS, Typescript, NodeJS, CSS, and developer productivity.</p>
          <div class="blog-cta__links">
            <a href="/about-me/journey/" class="cta-link">My Journey &rarr;</a>
            <a href="/about-me/coding-activity/" class="cta-link">Coding Activity &rarr;</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Hacks -->
    <section class="ed-section">
      <div class="ed-section__header">
        <h2 class="ed-section__title">Hacks</h2>
      </div>
      <p class="ed-section__subtitle">Short, practical tips and tricks across frontend topics.</p>
      <div class="hacks-strip">
        {hackCategories.map((cat) => (
          <a href={`/hacks/${cat}/`} class="hack-pill">
            <span class="hack-pill__label">{cat.replace(/-/g, ' ')}</span>
            <span class="hack-pill__arrow">&rarr;</span>
          </a>
        ))}
      </div>
    </section>

    <!-- Projects -->
    <section class="ed-section">
      <div class="ed-section__header">
        <h2 class="ed-section__title">Projects</h2>
      </div>
      <div class="bento">
        {projects.map((project, i) => (
          <a
            href={project.link}
            target={project.link.startsWith('http') ? '_blank' : '_self'}
            rel="noreferrer"
            class:list={['bento__card', { 'bento__card--wide': i === 0 || i === 3 }]}
          >
            <h3 class="bento__title">{project.title}</h3>
            <p class="bento__desc">{project.description}</p>
            <div class="blog-tags">
              {project.tech.map((t) => (
                <span class="blog-tag">{t}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Social -->
    <section class="ed-section ed-social">
      <div class="social__inner">
        <div class="social__info">
          <Image src={friendsLogoImg} alt="We can be friends" class="social__logo" width={180} height={45} />
          <p class="social__name">Samuel Lawrentz</p>
          <p class="social__role">Senior UI Engineer &mdash; <a href="https://plivo.com" target="_blank" rel="noreferrer">Plivo</a></p>
        </div>
        <nav class="social__links">
          <a href="https://github.com/samuellawrentz" target="_blank" rel="noreferrer">Github</a>
          <a href="https://in.linkedin.com/in/samuel-lawrentz" target="_blank" rel="noreferrer">LinkedIn</a>
          <a href="https://twitter.com/samuellawrentz" target="_blank" rel="noreferrer">Twitter</a>
          <a href="https://codepen.io/samuellawrentz" target="_blank" rel="noreferrer">Codepen</a>
          <a href="https://www.google.com/search?q=samuel+lawrentz" target="_blank" rel="noreferrer">Google me</a>
        </nav>
      </div>
    </section>

  </div>
</BaseLayout>

<script>
  setTimeout(() => document.querySelector('.heart-image')?.classList.add('tilt'), 100);

  // Typing tagline
  const phrases = [
    'I craft pixel-perfect interfaces.',
    'I architect scalable frontends.',
    'I turn ideas into elegant code.',
  ];
  const el = document.getElementById('tagline');
  if (el) {
    let pi = 0;
    let ci = 0;
    let deleting = false;
    const speed = 60;
    const pause = 1800;

    function tick() {
      const phrase = phrases[pi];
      if (!deleting) {
        ci++;
        el.textContent = phrase.slice(0, ci);
        if (ci === phrase.length) {
          deleting = true;
          setTimeout(tick, pause);
          return;
        }
      } else {
        ci--;
        el.textContent = phrase.slice(0, ci);
        if (ci === 0) {
          deleting = false;
          pi = (pi + 1) % phrases.length;
        }
      }
      setTimeout(tick, deleting ? speed / 2 : speed);
    }
    tick();
  }

</script>

<style>
  /* ───────── Grain overlay ───────── */
  .page-grain {
    position: fixed;
    inset: 0;
    z-index: 9999;
    pointer-events: none;
    opacity: 0.035;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 180px;
  }

  /* ───────── Layout shell ───────── */
  .editorial {
    max-width: 960px;
    margin: 0 auto;
    padding: 0 24px;
  }




  /* ───────── Hero ───────── */
  .hero {
    padding: 64px 0 48px;
  }

  .hero__layout {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 48px;
    align-items: center;
  }

  .hero__text {
    max-width: 560px;
  }

  .hero__heading {
    font-family: 'Sora', 'IBM Plex Sans', sans-serif;
    font-weight: 700;
    line-height: 1;
    margin: 0 0 24px;
  }

  .hero__hi {
    display: block;
    font-size: clamp(24px, 4vw, 36px);
    font-weight: 300;
    letter-spacing: 0.04em;
    color: var(--element2);
    margin-bottom: 4px;
  }

  .hero__name {
    display: inline-block;
    font-size: clamp(64px, 10vw, 120px);
    letter-spacing: -0.03em;
    background: linear-gradient(
      135deg,
      var(--primary-color) 0%,
      var(--secondary-color) 50%,
      var(--primary-color) 100%
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShimmer 6s ease infinite;
  }

  @keyframes gradientShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .hero__tagline {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(16px, 2.5vw, 20px);
    color: var(--element2);
    min-height: 1.6em;
    margin: 0 0 24px;
    border-right: 2px solid var(--primary-color);
    display: inline-block;
    padding-right: 4px;
    animation: blink 0.8s step-end infinite;
  }

  @keyframes blink {
    50% { border-color: transparent; }
  }

  .hero__bio {
    font-size: var(--body);
    line-height: 1.7;
    color: var(--element2);
    margin: 0 0 16px;
  }

  .hero__philosophy {
    font-size: var(--caption);
    color: var(--element3);
    margin: 0;
  }

  .hero__visual {
    position: relative;
    width: 280px;
    height: 280px;
  }

  /* ───────── CSS Art Geometric Composition ───────── */
  .geo-art {
    position: relative;
    width: 280px;
    height: 280px;
    animation: geoFloat 6s ease-in-out infinite;
  }

  @keyframes geoFloat {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    33% { transform: translateY(-8px) rotate(1deg); }
    66% { transform: translateY(4px) rotate(-0.5deg); }
  }

  .geo-art__ring--outer {
    position: absolute;
    width: 220px;
    height: 220px;
    top: 30px;
    left: 30px;
    border: 2px solid var(--element3);
    border-radius: 50%;
    animation: ringRotate 20s linear infinite;
  }

  .geo-art__ring--inner {
    position: absolute;
    width: 150px;
    height: 150px;
    top: 65px;
    left: 65px;
    border: 1.5px dashed var(--element4);
    border-radius: 50%;
    animation: ringRotate 15s linear infinite reverse;
  }

  @keyframes ringRotate {
    to { transform: rotate(360deg); }
  }

  .geo-art__diamond {
    position: absolute;
    width: 64px;
    height: 64px;
    top: 108px;
    left: 108px;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    transform: rotate(45deg);
    border-radius: 4px;
    animation: diamondPulse 3s ease-in-out infinite;
  }

  @keyframes diamondPulse {
    0%, 100% { transform: rotate(45deg) scale(1); opacity: 1; }
    50% { transform: rotate(45deg) scale(0.9); opacity: 0.8; }
  }

  .geo-art__dot {
    position: absolute;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--primary-color);
  }

  .geo-art__dot--1 {
    top: 24px;
    left: 140px;
    animation: dotBlink 2.5s ease-in-out infinite;
  }

  .geo-art__dot--2 {
    bottom: 40px;
    left: 60px;
    width: 6px;
    height: 6px;
    background: var(--secondary-color);
    animation: dotBlink 3s ease-in-out 0.5s infinite;
  }

  .geo-art__dot--3 {
    top: 100px;
    right: 20px;
    width: 10px;
    height: 10px;
    background: var(--element3);
    animation: dotBlink 2s ease-in-out 1s infinite;
  }

  @keyframes dotBlink {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.3; transform: scale(0.6); }
  }

  .geo-art__line--h {
    position: absolute;
    width: 100%;
    height: 1px;
    top: 50%;
    left: 0;
    background: linear-gradient(to right, transparent 0%, var(--element4) 30%, var(--element4) 70%, transparent 100%);
  }

  .geo-art__line--v {
    position: absolute;
    width: 1px;
    height: 100%;
    left: 50%;
    top: 0;
    background: linear-gradient(to bottom, transparent 0%, var(--element4) 30%, var(--element4) 70%, transparent 100%);
  }

  .geo-art__bracket {
    position: absolute;
    font-family: 'JetBrains Mono', monospace;
    font-size: 72px;
    font-weight: 400;
    color: var(--element4);
    line-height: 1;
    user-select: none;
  }

  .geo-art__bracket--open {
    top: 60px;
    left: -8px;
    animation: bracketShift 4s ease-in-out infinite;
  }

  .geo-art__bracket--close {
    bottom: 50px;
    right: -8px;
    animation: bracketShift 4s ease-in-out 2s infinite;
  }

  @keyframes bracketShift {
    0%, 100% { transform: translateY(0); opacity: 0.5; }
    50% { transform: translateY(-6px); opacity: 1; }
  }

  /* Tiny pixel heart tribute inside the composition */
  .geo-art__pixel-heart {
    position: absolute;
    bottom: 16px;
    right: 40px;
    width: 5px;
    height: 5px;
    box-shadow:
      5px 0 0 var(--primary-color),
      10px 0 0 var(--primary-color),
      20px 0 0 var(--primary-color),
      25px 0 0 var(--primary-color),
      0 5px 0 var(--primary-color),
      5px 5px 0 var(--primary-color),
      10px 5px 0 var(--primary-color),
      15px 5px 0 var(--primary-color),
      20px 5px 0 var(--primary-color),
      25px 5px 0 var(--primary-color),
      30px 5px 0 var(--primary-color),
      0 10px 0 var(--primary-color),
      5px 10px 0 var(--primary-color),
      10px 10px 0 var(--primary-color),
      15px 10px 0 var(--primary-color),
      20px 10px 0 var(--primary-color),
      25px 10px 0 var(--primary-color),
      30px 10px 0 var(--primary-color),
      5px 15px 0 var(--primary-color),
      10px 15px 0 var(--primary-color),
      15px 15px 0 var(--primary-color),
      20px 15px 0 var(--primary-color),
      25px 15px 0 var(--primary-color),
      10px 20px 0 var(--primary-color),
      15px 20px 0 var(--primary-color),
      20px 20px 0 var(--primary-color),
      15px 25px 0 var(--primary-color);
    animation: pixelPulse 3.2s ease-in-out infinite;
  }

  @keyframes pixelPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.15); }
  }

  /* ───────── Section shared ───────── */
  .ed-section {
    padding: 56px 0;
    border-top: 1px solid var(--element4);
    margin: 0;
    position: relative;
  }

  .ed-section__header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 32px;
  }

  .section__link {
    font-family: 'JetBrains Mono', monospace;
    font-size: 14px;
    color: var(--element2);
    text-decoration: none;
    border-bottom: 1px solid var(--element4);
    padding-bottom: 2px;
    transition: border-color 0.2s, color 0.2s;
  }

  .section__link:hover {
    color: var(--element1);
    border-bottom-color: var(--element1);
  }

  .ed-section__subtitle {
    color: var(--element2);
    margin: -16px 0 28px;
    font-size: var(--body);
  }

  /* ───────── Blog editorial grid ───────── */
  .blog-editorial {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
    gap: 24px;
    margin-bottom: 40px;
  }

  .blog-featured {
    grid-row: 1 / 2;
    grid-column: 1 / 2;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    border-radius: 8px;
    overflow: hidden;
    min-width: 0;
    border: 1px solid var(--element4);
    transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1), box-shadow 0.3s ease;
  }

  .blog-featured:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px -8px var(--card-shadow-color);
  }

  .blog-featured__img {
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .blog-featured__img :global(img) {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .blog-featured:hover .blog-featured__img :global(img) {
    transform: scale(1.04);
  }

  .blog-featured__body {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .blog-featured__title {
    font-family: 'Sora', 'IBM Plex Sans', sans-serif;
    font-size: clamp(18px, 2.5vw, 24px);
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
  }

  .blog-featured__desc {
    font-size: var(--caption);
    color: var(--element2);
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-rest {
    display: flex;
    flex-direction: column;
    gap: 16px;
    min-width: 0;
  }

  .blog-card {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 16px;
    text-decoration: none;
    color: inherit;
    padding: 12px;
    border-radius: 8px;
    border: 1px solid transparent;
    min-width: 0;
    transition: border-color 0.2s, transform 0.3s cubic-bezier(0.22, 1, 0.36, 1), box-shadow 0.3s ease;
  }

  .blog-card:hover {
    border-color: var(--element4);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px -6px var(--card-shadow-color);
  }

  .blog-card__img {
    border-radius: 6px;
    overflow: hidden;
    aspect-ratio: 3 / 2;
  }

  .blog-card__img :global(img) {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-card__body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 6px;
  }

  .blog-card__title {
    font-family: 'Sora', 'IBM Plex Sans', sans-serif;
    font-size: clamp(15px, 2vw, 17px);
    font-weight: 600;
    line-height: 1.35;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* ───────── Shared tag / date atoms ───────── */
  .blog-date {
    font-family: 'JetBrains Mono', monospace;
    font-size: 12px;
    color: var(--element3);
    letter-spacing: 0.03em;
    text-transform: uppercase;
  }

  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 4px;
  }

  .blog-tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 11px;
    padding: 3px 8px;
    border-radius: 4px;
    background: var(--surface2);
    color: var(--element2);
    white-space: nowrap;
  }

  /* ───────── Blog CTA ───────── */
  .blog-cta {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 32px;
    align-items: center;
    padding: 32px;
    border-radius: 12px;
    background: var(--surface2);
    border: 1px solid var(--element4);
    overflow: hidden;
  }

  .blog-cta__img :global(img) {
    border-radius: 8px;
    max-height: 200px;
    width: auto;
  }

  .blog-cta__body :global(h3) {
    font-family: 'Sora', 'IBM Plex Sans', sans-serif;
